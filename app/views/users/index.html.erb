<div class="row">
  <div class="col-xs-12 col-md-4">



    <div class="row">
      <% @farmers.each do |farmer| %>
        <div class="col-xs-12">
          <div class="card" >
            <%= cl_image_tag(farmer.photos, height: 180, width: 300) %>
            <div class="card-description">
              <h2> <%=  farmer.first_name %> <%= farmer.last_name %></h2>
              <p>  <%= farmer.skills %></p>
              <p>  <%= farmer.price %></p>
            </div>
          </div>
        </div>
      <% end %>



    </div>

  </div>
  <div class="col-xs-12 col-md-8">
    <div
      id="map"
      style="width: 100%;
      height: 100vh;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
    >
    </div>
  </div>

<br>
<br>

<%= link_to "Envoyer un message", conversations_path %>

<br>
<br>


</div>
