<div class="wrapper">
  <div class="row">
    <div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://images.unsplash.com/photo-1523810192022-5a0fb9aa7ff8?ixlib=rb-0.3.5&ixid=eyJhcHBfaWQiOjEyMDd9&s=4043ee9a58e1d9818c2f7e602f3576fa&auto=format&fit=crop&w=2847&q=80');">
      <div class="banner-content">
        <h3>Bonjour <%= current_user.first_name %>,</h3>
        <p><em>Grâce à <strong>La Pioche</strong>, trouvez un expert en jardinage pour vous aider !</em></p>
      </div>
    </div>
  </div>
  <div class="icons">
    <p class="top10"><i class="fas fa-tint"></i></p>
    <p class="top10"><i class="fas fa-sun"></i></p>
    <p class="top10"><i class="fas fa-seedling"></i></p>
  </div>
  <div class="search-form">
    <%= form_tag users_path, method: :get do %>
      <div class="form-group">
        <div class="place">
          <ion-icon name="pin"></ion-icon>
          <p>Où souhaitez-vous jardiner ?</p>
        </div>
        <%= text_field_tag :city, params[:city], class: "form-control", placeholder: "Ma ville" %>
      </div>

      <div class="form-group">
        <div class="date">
          <i class="far fa-calendar-alt"></i>
          <p>À quelle date ?</p>
        </div>
        <%= date_field_tag :date, cookies[:date], class: "form-control", placeholder: "Ma dispo" %>
      </div>
      <input type='submit', class='btn-medium', value='Lancer ma recherche'>
    <% end %>
  </div>
</div>

