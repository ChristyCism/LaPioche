<div class="signup">
<h4>Vous êtes un jardinier expérimenté ou vous souhaitez en contacter un ? <br></h4>
<h2>Inscrivez-vous.</h2>

<%= simple_form_for(:user, url: user_registration_path) do |f| %>
  <div class="form-inputs">
    <%= f.error_notification %>
    <%= f.input :email,
                required: true,
                input_html: { autocomplete: "email" }%>
    <%= f.input :password,
                label: 'Mot de passe',
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :password_confirmation,
    label: 'Confirmation du mot de passe',
                required: true,
                input_html: { autocomplete: "new-password" } %>
    <%= f.input :first_name,
    label: 'Prénom',
                required: true,
                input_html: { autocomplete: "first_name" }%>
    <%= f.input :last_name,
    label: 'Nom',
                required: true,
                input_html: { autocomplete: "last_name" }%>
    <%= f.input :profile_picture, as: :file %>
    <%= f.input :city,
                required: true %>
    <%= f.input :bio,
                required: true %>
    <%= f.input :isFarmer, label: 'Souhaitez-vous proposer vos services ?', as: :radio_buttons %>
    <div class="farmervalid">
      <%= f.input :price,
                  required: true %>
      <%= f.input :skills,
                  required: true %>
      <%= f.input :dispos, as: :radio_buttons, collection: ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday', 'Sunday'], wrapper: :vertical_collection_inline %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Je m'inscris" %>
  </div>
<% end %>
</div>
